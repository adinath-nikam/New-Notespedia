<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


        <TextView
            android:id="@+id/pdfUsername"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="username"
            android:textStyle="bold"
            android:textSize="20dp"/>

            <ImageView
                android:id="@+id/pdf_ic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/pdf_ic"/>

        <TextView
            android:id="@+id/pdf_title"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_below="@id/pdfUsername"
            android:textColor="@color/RoyalBlue"
            android:textStyle="bold"
            android:textSize="25sp"/>


            <TextView
                android:id="@+id/pdf_desc"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginBottom="30dp"
                android:layout_below="@id/pdf_title"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width= "match_parent"
                android:layout_height= "1dp"
                android:background="@color/dull"
                android:layout_marginBottom="10dp"
                android:layout_above="@id/pdf_date"/>

            <TextView
                android:id="@+id/pdf_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30"
                android:layout_below="@id/pdf_desc"/>

            <TextView
                android:id="@+id/pdf_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jan 1, 2020"
                android:layout_below="@id/pdf_desc"
                android:layout_toRightOf="@id/pdf_time"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>